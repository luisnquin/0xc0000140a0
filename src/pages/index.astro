---
import ProfessionalCareer from "../components/ProfessionalCareer.astro";
import type { IProfessionalExperience } from "@/types";
import UserMeta from "../components/UserMeta.astro";
import Layout from "../layouts/Layout.astro";

const lastUpdate = "2024-07-01";

const me = {
  fullName: "Luis Quiñones Requelme",
  cvLink: "https://cdn.quinones.pro/resume.pdf",
  email: "luis@quinones.pro",
};

const localContents = [
  {
    title: "Projects",
    href: "#projects",
  },
  {
    title: "Professional Career",
    href: "#professional-career",
  },
  {
    title: "Interests",
    href: "#interests",
  },
  {
    title: "Knowledge",
    href: "#knowledge",
  },
  {
    title: "Other places",
    href: "#other-places",
  },
];

const professionalCareer: Array<IProfessionalExperience> = [
  {
    company: "Inversiones.io",
    position: "Site Reliability Engineer",
    location: "Perú",
    mode: "Hybrid",
    since: "Jan 2024",
    until: "NaN",
    description:
      "Is a crowdfunding fintech company situated in Peru, dedicated to connecting investors with enterprises in need of funding. Our aspiration is to enhance the Peruvian economy and boost small and medium-sized enterprises around the country.",
  },
  {
    company: "Desstorm",
    position: "Web Developer",
    location: "Perú",
    mode: "Remote",
    since: "Oct 2021",
    until: "Dec 2021",
    description: "",
  },
];
---

<Layout title={me.fullName}>
	<main class="flex flex-col gap-16">
		<UserMeta {lastUpdate} {me} />

		<section id="contents" class="flex flex-col gap-4">
			<h2 class="font-bold">CONTENTS</h2>

			<ul class="list-disc list-inside ml-6">
				{
					localContents.map(({ title, href }) => (
						<li>
							<a href={href} class="underline">{title}</a>
						</li>
					))
				}
		</section>

    <ProfessionalCareer {professionalCareer} />
	</main>

</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 900px;
		max-width: calc(100% - 1.5rem);
		color: white;
		font-size: 18px;
		line-height: 2;
	}

  li {
    margin: -8px 0;
  }

  @media (max-width: 750px) {
    main {
      padding: unset;
      max-width: 100%;
    }
  }
</style>
