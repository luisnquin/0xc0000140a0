---
interface Props {
  lastUpdate: string;
  me: {
    fullName: string;
    cvLink: string;
    email: string;
  };
}

const { lastUpdate, me } = Astro.props;
---

<section id="meta">
    <h1 id="fullname" class="uppercase font-extrabold" style="padding-left: 18px;">{me.fullName}</h1> 

    <h4 id="last-update" class="font-semibold text-center">
        Updated
    </h4>

    <span id="last-update-value" class="text-center">
        {lastUpdate}
    </span>

    <div id="cv" class="flex flex-row items-center gap-3">
        <h2 class="font-semibold text-start border-r-[1px] border-white border-solid pl-[1.2rem] pr-[1.2rem]">
            CV
        </h2>

        <a href="https://cdn.quinones.pro/resume.pdf" target="_blank" class="underline text-center text-[15px]">
            {me.cvLink}
        </a>
    </div>

    <h2 id="contact" class="font-semibold text-center">
        Contact
    </h2>

    <span id="contact-value" class="text-center">
        {me.email}
    </span>
</section>

<style>
    #meta {
		display: grid;
		grid-template-columns: 60% 12% 28%;
		align-items: center;
		margin-top: 1.5rem;
        overflow: hidden;
	}

	#meta > * {
		border: 1px solid white;
		box-sizing: border-box;
		padding: 4px;
	}
    

    @media (max-width: 670px) {
        #cv {
            flex-direction: column;
        }

        #cv > h2{
            width: 100%;
            text-align: center;
            padding: unset;
            border-right: unset;
            border-bottom: 1px solid white;
        }
    }

    @media (max-width: 1200px) {
        #meta {
            grid-template-columns: 100%;
        }

        #fullname {
            order: 1;
        }

        #cv {
            order: 2;
        }

        #contact {
            order: 3;
        }

        #contact-value {
            order: 4;
        }

        #last-update {
            order: 5;
        }
        
        #last-update-value {
            order: 6;
        }
    }
</style>